               </button>
               <button class="btn btn-sm btn-secondary ml-3 req-deleter" hidden><i class="fas fa-times"></i> Effacer</button>
           </div>
            <div class="col-6 exercice pl-5">
                {% include 'editor/exercices.html.twig' %}
            </div>
        </div>
